<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="calc.Controller" xmlns:fx="http://javafx.com/fxml" >

    <TextField  fx:id="textField" prefWidth="400" prefHeight="50" alignment="BASELINE_RIGHT"/>

    <GridPane hgap="10" vgap="10" alignment="BASELINE_CENTER">
        <Button  GridPane.columnIndex="0" GridPane.rowIndex="1" text="1" prefWidth="50" prefHeight="50" onAction="#btnPressed"/>
        <Button  GridPane.columnIndex="1" GridPane.rowIndex="1" text="2" prefWidth="50" prefHeight="50" onAction="#btnPressed"/>
        <Button  GridPane.columnIndex="2" GridPane.rowIndex="1" text="3" prefWidth="50" prefHeight="50" onAction="#btnPressed"/>
        <Button  GridPane.columnIndex="3" GridPane.rowIndex="1" text="*" prefWidth="50" prefHeight="50" onAction="#actionMul"/>

        <Button  GridPane.columnIndex="0" GridPane.rowIndex="2" text="4" prefWidth="50" prefHeight="50" onAction="#btnPressed"/>
        <Button  GridPane.columnIndex="1" GridPane.rowIndex="2" text="5" prefWidth="50" prefHeight="50" onAction="#btnPressed"/>
        <Button  GridPane.columnIndex="2" GridPane.rowIndex="2" text="6" prefWidth="50" prefHeight="50" onAction="#btnPressed"/>
        <Button  GridPane.columnIndex="3" GridPane.rowIndex="2" text="/" prefWidth="50" prefHeight="50" onAction="#actionDiv"/>

        <Button  GridPane.columnIndex="0" GridPane.rowIndex="3" text="7" prefWidth="50" prefHeight="50" onAction="#btnPressed"/>
        <Button  GridPane.columnIndex="1" GridPane.rowIndex="3" text="8" prefWidth="50" prefHeight="50" onAction="#btnPressed"/>
        <Button  GridPane.columnIndex="2" GridPane.rowIndex="3" text="9" prefWidth="50" prefHeight="50" onAction="#btnPressed"/>
        <Button  GridPane.columnIndex="3" GridPane.rowIndex="3" text="+" prefWidth="50" prefHeight="50" onAction="#actionPlus"/>

        <Button  GridPane.columnIndex="0" GridPane.rowIndex="4" text="0" prefWidth="50" prefHeight="50" onAction="#btnPressed"/>
        <Button  GridPane.columnIndex="1" GridPane.rowIndex="4" text="C" prefWidth="50" prefHeight="50" onAction="#clear"/>
        <Button  GridPane.columnIndex="2" GridPane.rowIndex="4" text="=" prefWidth="50" prefHeight="50" onAction="#equal"/>
        <Button  GridPane.columnIndex="3" GridPane.rowIndex="4" text="-" prefWidth="50" prefHeight="50" onAction="#actionMinus"/>


    </GridPane>

</VBox>